<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/burger"
            android:layout_gravity="center"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rad_beef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beef Patty"/>
            <RadioButton
                android:id="@+id/rad_lamb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamb Patty"/>
            <RadioButton
                android:id="@+id/rad_ostrich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ostrich Patty"/>
        </RadioGroup>

        <CheckBox
            android:id="@+id/cb_pros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prosciutto"
            android:layout_gravity="center"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <RadioButton
                android:id="@+id/rad_asiago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asiago Cheese"/>
            <RadioButton
                android:id="@+id/rad_creme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creme Fraiche"/>
        </RadioGroup>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caviar sauce up to one teaspoon"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/white"
                android:text="+"
                android:textSize="20dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_spoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="0"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/white"
                android:text="-"
                android:textSize="20dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/banhmi"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: 256"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/but_order"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER"
            android:layout_gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>